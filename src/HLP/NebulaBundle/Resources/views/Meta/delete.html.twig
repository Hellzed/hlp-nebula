{% extends "HLPNebulaBundle::layout.html.twig" %}

{% block title %}
  {{ meta.title }} / Delete mod - {{ parent() }}
{% endblock %}

{% block body %}
<div class="row">
  <ol class="breadcrumb">
    <li><a href="{{ path('hlp_nebula_workshop_home') }}">Mods</a></li>
    <li href="active">Delete mod : <a href="{{ path('hlp_nebula_repository_meta', {'meta': meta.metaId}) }}">{{ meta.title }}</a></li>
  </ol>
</div>
<div class="row">
  <div class="col-sm-3">
    <h2><small>Delete mod </small>{{ meta.title }}</h2>
    <hr/>
    <p class="lead"><small class="text-muted">as </small>{{ app.user.username }}</p>
    <hr/>
    <p class="lead"><small class="text-muted">or </small><a href="{{ referURL }}" class="btn btn-default">Cancel</a></p>
  </div>
  <div class="col-sm-9">
    <form action="{{ path('hlp_nebula_repository_meta_delete', {'meta': meta.metaId}) }}" method="post" class="mainForm row">
      <h4><span class="glyphicon glyphicon-warning-sign"></span> Do you really want to delete this mod ?</h4>
      <hr/>
      <p class="well">
        This action will delete mod <strong>"{{ meta.title }}" (id: {{ meta.metaId }})</strong>, all the branches it contains, and all the builds they contain.
      </p>
      <hr/>
      <input type="submit" value="Proceed" class="btn btn-danger" />
      {{ form_rest(form) }}
    </form>
  </div>
</div>
{% endblock %}
