{% extends "HLPNebulaBundle:Branch:_layout.html.twig" %}

{% block title %}
  {{ meta.title }} / {{ branch.name }} / Delete branch - {{ parent() }}
{% endblock %}

{% block body %}
<div class="row">
  <ol class="breadcrumb">
    <li><a href="{{ path('hlp_nebula_workshop_home') }}">Browse mods</a></li>
    <li><a href="{{ path('hlp_nebula_repository_meta', {'meta': meta.metaId}) }}">{{ meta.title }}</a></li>
    <li href="active">Delete branch : <a href="{{ path('hlp_nebula_repository_branch', {'meta': meta.metaId, 'branch': branch.branchId}) }}">{{ branch.name }}</a></li>
  </ol>
</div>
<div class="row">
  <div class="col-sm-3">
    <h2><small>Delete branch </small>{{ branch.name }}</h2>
    <hr/>
    <p class="lead"><small class="text-muted">from mod </small>{{ meta.title }}</p>
    <p class="lead"><small class="text-muted">as </small>{{ app.user.username }}</p>
    <hr/>
    <p class="lead"><small class="text-muted">or </small><a href="{{ referURL }}" class="btn btn-default">Cancel</a></p>
  </div>
  <div class="col-sm-9">
    <form action="{{ path('hlp_nebula_repository_branch_delete', {'meta': meta.metaId, 'branch': branch.branchId}) }}" method="post" class="mainForm row">
      <h4><span class="glyphicon glyphicon-warning-sign"></span> Do you really want to delete this branch ?</h4>
      <hr/>
      <p class="well">
        This action will delete branch <strong>"{{ branch.name }}" (id: {{ branch.branchId }})</strong> and all the builds it contains from mod <strong>"{{ meta.title }}" (id: {{ meta.metaId }})</strong>.
      </p>
      <hr/>
      <input type="submit" value="Proceed" class="btn btn-danger" />
      {{ form_rest(form) }}
    </form>
  </div>
</div>
{% endblock %}
