{% form_theme form 'HLPNebulaBundle:AdvancedUI:form_theme.html.twig' %}

<form role="form" class="mainForm row" action="{% if app.request.attributes.get('_route') == 'hlp_nebula_edit_mod' %}{{ path('hlp_nebula_edit_mod', {'owner': owner.nameCanonical, 'mod': mod.modId}) }}{% else %}{{ path('hlp_nebula_new_mod', {'owner': owner.nameCanonical}) }}{% endif %}" method="post" {{ form_enctype(form) }}>
  <h4><span class="glyphicon glyphicon-asterisk"></span> Mod metadata</h4>
  <hr/>
  {{ form_widget(form) }}
  <button type="submit" class="btn btn-default">Submit</button>
</form>
