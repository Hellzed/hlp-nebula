{% extends "HLPNebulaBundle::layout.html.twig" %}

{% block title %}
  {{ owner.name }} - {{ parent() }}
{% endblock %}

{% block body %}
<div class="row">
  <ol class="breadcrumb">
    <li><a href="{{ path('hlp_nebula_homepage') }}">Nebula</a></li>
    <li href="active">{{ owner.name }}</li>
  </ol>
</div>
<div class="row">
  <div class="col-sm-3">
    <h2>{{ owner.name }}</h2>
    <hr/>
    <p class="text-muted"><span class="glyphicon glyphicon-time"></span> Joined on {{ owner.joined|date("d M Y") }}</p>
    <hr/>
    <div class="row">
      <div class="col-md-4 text-center"><p class="lead">{{ owner.nbMods }}<br/><small class="text-muted">mod{% if owner.nbMods > 1 %}s{% endif %}</small></p></div>
      <div class="col-md-4 text-center"><p class="lead">{{ owner.nbBranches }}<br/><small class="text-muted">branch{% if owner.nbBranches > 1 %}es{% endif %}</small></p></div>
      <div class="col-md-4 text-center"><p class="lead">{{ owner.nbBuilds }}<br/><small class="text-muted">build{% if owner.nbBuilds > 1 %}s{% endif %}</small></p></div>
    </div>
  </div>
  <div class="col-sm-9">
    <ul class="mainTabs nav nav-tabs" role="tablist">
      <li class="{% if app.request.attributes.get('_route') == 'hlp_nebula_owner_mods' %}active{% endif %}"><a href="{{ path('hlp_nebula_owner_mods', {'owner': owner.usernameCanonical}) }}"><h4 class="titletab">Mods</h4></a></li>
      <li class="{% if app.request.attributes.get('_route') == 'hlp_nebula_owner_profile' %}active{% endif %}"><a href="{{ path('hlp_nebula_owner_profile', {'owner': owner.usernameCanonical}) }}"><h4 class="titletab">Modder profile</h4></a></li>
      <li class="{% if app.request.attributes.get('_route') == 'hlp_nebula_owner_activity' %}active{% endif %}"><a href="{{ path('hlp_nebula_owner_activity', {'owner': owner.usernameCanonical}) }}"><h4 class="titletab">Activity</h4></a></li>
    </ul>
  {% include "HLPNebulaBundle:AdvancedUI:flashbox.html.twig" %}
    
  {% block owner_tab %}
  {% endblock %}
  </div>
</div>
{% endblock %}
